<div class="container">
  <div class="search center">
    <div class="wrapper">
      <p class="error-message"></p>
      <form id="searchform" method="post" action="/users/search">
        <input id="search-field" type="text" name="search" placeholder="Search...">
        <input class="go-button" type="submit" value="Go">
      </form>
    </div>
  </div>
  <section class="results-pane left">
    <aside class="saved-searches">
      <div class="center">
        <h2>Saved Searches <hr></h2>
        {{#each saved}}
        {{>savedsearch search=this}}
        {{/each}}
      </div>
    </aside>
    <ul>
      {{#if results.length}}
      {{#each results}}
      <li>
        {{>searchresult img=this.images.standard_resolution.url alt=this.user.username}}
      </li>
      {{/each}}
      {{else}}
      <h3 class="no-result">No Results</h3>
      {{/if}}
    </ul>
  </section>
</div>
